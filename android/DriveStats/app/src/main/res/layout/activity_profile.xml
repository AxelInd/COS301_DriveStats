<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_profile"
    tools:context="za.co.dvt.drivestats.activities.ProfileActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilePicture"
        android:src="@drawable/userimage"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nicholas Robinson"
        android:id="@+id/username"
        android:textSize="12pt"
        android:layout_below="@id/profilePicture"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User ID: 3"
        android:id="@+id/userid"
        android:textSize="10pt"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="30dp"
        android:text="Average Score"
        android:textSize="12pt"
        android:id="@+id/textView3"
        android:width="140dp"
        android:gravity="center"
        android:layout_below="@id/userid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of Trips"
        android:gravity="center"
        android:width="140dp"
        android:textSize="12pt"
        android:id="@+id/textView4"
        android:layout_alignBottom="@id/textView3"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/averageScore"
        android:textSize="30pt"
        android:width="140dp"
        android:gravity="center"
        android:layout_below="@id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="140dp"
        android:textSize="30pt"
        android:gravity="center"
        android:id="@+id/numberTrips"
        android:layout_alignStart="@id/textView4"
        android:layout_alignBottom="@+id/averageScore" />

</RelativeLayout>
